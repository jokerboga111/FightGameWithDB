/*
*User class
*/
public class Profile
{

/*User information*/

    public String Race{set;get;}
    public String Name{set;get;}
    public Integer HP{set;get;}
    public Integer DMGmin{set;get;}
    public Integer DMGmax{set;get;}
    public Integer Accuracy{set;get;}
    public Integer Dexterity{set;get;}
    
    public String getName() 
    {
    return this.name;
    }
    
    public Integer getHP() 
    {
    return this.HP;
    }
   
    public void setHP(Integer HP) 
    {
    this.HP = HP;
    }
   
    /*consrtructor for use User information*/
    
    public Profile(String Name, String Race, Integer HP, Integer DMGmin, Integer DMGmax, Integer Accuracy, Integer Dexterity)
    {
        this.Race = Race;
        this.Name = name;
        this.HP = HP;
        this.DMGmin = DMGmin;
        this.DMGmax = DMGmax;
        this.Accuracy = Accuracy;
        this.Dexterity = Dexterity;
    }

    /*method for calculate damage in game*/
    
    public static List<Integer> fighting(Profile first, Profile second, boolean firsthit, boolean secondhit)
    {        
        
        Integer Damage1 = Math.round((Math.floor(Math.random() * (first.DMGmax - first.DMGmin + 1) + first.DMGmin)));
        Integer Damage2 = Math.round((Math.floor(Math.random() * (second.DMGmax - second.DMGmin + 1) + second.DMGmin)));
        Integer Dexterity1 = Math.round((Math.floor(Math.random() * first.Dexterity)));
        Integer Dexterity2 = Math.round((Math.floor(Math.random() * second.Dexterity)));
        Integer Accuracy1 = Math.round((Math.floor(Math.random() * first.Accuracy)));
        Integer Accuracy2 = Math.round((Math.floor(Math.random() * second.Accuracy)));
        
        if (secondhit == true & Accuracy2 > Dexterity1) {first.HP -= Damage2;} else {Damage2 = 0;}
        if (firsthit == true & Accuracy1 > Dexterity2) {second.HP -= Damage1;} else {Damage1 = 0;}      
        List<Integer> damages = new List<Integer>{Damage1, Damage2};
        return damages;
    }
}
